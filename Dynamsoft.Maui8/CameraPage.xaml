<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cv="clr-namespace:Dynamsoft.Maui8.Patch;assembly=Dynamsoft.Maui8.Patch"
    x:Class="Dynamsoft.Maui8.CameraPage"
    Title="CameraPage">

    <ScrollView>
        <Grid>
            <cv:CameraView
                EnableBarcode="True"
                HorizontalOptions="FillAndExpand"
                ResultReady="OnCameraViewResultReady"
                VerticalOptions="FillAndExpand" />
        </Grid>
    </ScrollView>

</ContentPage>